<?xml version="1.0" encoding="utf-8"?>

<!-- This xml file is the frontend for the activity which displays a message after checking for connection between Raspberry Pi and Android Phone -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="1"
            android:gravity="center|center_vertical"
            android:text=""
            android:textColor="#000000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button21"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="@string/translation7"
            android:onClick="onButtonClickName21"
            android:textColor="#ffffff"
            android:visibility="invisible"/>

    </LinearLayout>

</RelativeLayout>
